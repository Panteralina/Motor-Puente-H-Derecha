void setup() {
  // put your setup code here, to run once:
pinMode (1,OUTPUT);
pinMode (2,OUTPUT);
pinMode (3,OUTPUT);
pinMode (4,OUTPUT);
pinMode (5,OUTPUT);
pinMode (6,OUTPUT);
pinMode (7,OUTPUT);
pinMode (8,OUTPUT);
}

void loop() {
  // put your main code here, to run repeatedly:
  //Hacia adelante
  digitalWrite (1,HIGH);
  digitalWrite (2,LOW);
  digitalWrite (3,HIGH);
  digitalWrite (4,LOW);
  digitalWrite (5,HIGH);
  digitalWrite (6,LOW);
  digitalWrite (7,HIGH);
  digitalWrite (8,LOW);
  delay(2000);
  
  //detenerse
  digitalWrite (1,LOW);
  digitalWrite (2,LOW);
  digitalWrite (3,LOW);
  digitalWrite (4,LOW);
  digitalWrite (5,LOW);
  digitalWrite (6,LOW);
  digitalWrite (7,LOW);
  digitalWrite (8,LOW);
  delay(5000);
  
  //Hacia atras
  digitalWrite (1,LOW);
  digitalWrite (2,HIGH);
  digitalWrite (3,LOW);
  digitalWrite (4,HIGH);
  digitalWrite (5,LOW);
  digitalWrite (6,HIGH);
  digitalWrite (7,LOW);
  digitalWrite (8,HIGH);
  delay(3000);
  
  //detenerse
  digitalWrite (1,LOW);
  digitalWrite (2,LOW);
  digitalWrite (3,LOW);
  digitalWrite (4,LOW);
  digitalWrite (5,LOW);
  digitalWrite (6,LOW);
  digitalWrite (7,LOW);
  digitalWrite (8,LOW);
  delay(5000);
  
  //A su posicion original
  digitalWrite (1,HIGH);
  digitalWrite (2,LOW);
  digitalWrite (3,HIGH);
  digitalWrite (4,LOW);
  digitalWrite (5,HIGH);
  digitalWrite (6,LOW);
  digitalWrite (7,HIGH);
  digitalWrite (8,LOW);
  delay(1000);
  
  //detenerse
  digitalWrite (1,LOW);
  digitalWrite (2,LOW);
  digitalWrite (3,LOW);
  digitalWrite (4,LOW);
  digitalWrite (5,LOW);
  digitalWrite (6,LOW);
  digitalWrite (7,LOW);
  digitalWrite (8,LOW);
  delay(5000);
  
  //girar a la izquierda
  digitalWrite (1,HIGH);
  digitalWrite (2,LOW);
  digitalWrite (3,LOW);
  digitalWrite (4,HIGH);
  digitalWrite (5,HIGH);
  digitalWrite (6,LOW);
  digitalWrite (7,LOW);
  digitalWrite (8,HIGH);
  delay(2500);
  
  //detenerse
  digitalWrite (1,LOW);
  digitalWrite (2,LOW);
  digitalWrite (3,LOW);
  digitalWrite (4,LOW);
  digitalWrite (5,LOW);
  digitalWrite (6,LOW);
  digitalWrite (7,LOW);
  digitalWrite (8,LOW);
  delay(5000);
  
  //GIRAR A LA DERECHA
  digitalWrite (1,LOW);
  digitalWrite (2,HIGH);
  digitalWrite (3,LOW);
  digitalWrite (4,HIGH);
  digitalWrite (5,LOW);
  digitalWrite (6,HIGH);
  digitalWrite (7,LOW);
  digitalWrite (8,HIGH);
  delay(5000);
  
  //detenerse
  digitalWrite (1,LOW);
  digitalWrite (2,LOW);
  digitalWrite (3,LOW);
  digitalWrite (4,LOW);
  digitalWrite (5,LOW);
  digitalWrite (6,LOW);
  digitalWrite (7,LOW);
  digitalWrite (8,LOW);
  delay(5000);
  
  //girar a la izquierda
  digitalWrite (1,HIGH);
  digitalWrite (2,LOW);
  digitalWrite (3,LOW);
  digitalWrite (4,HIGH);
  digitalWrite (5,HIGH);
  digitalWrite (6,LOW);
  digitalWrite (7,LOW);
  digitalWrite (8,HIGH);
  delay(2500);
  
}
